<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/shen_blue_statstics">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="类型"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="数量"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="4dp"
            android:text="详情"
            android:textColor="@android:color/white"
            android:textSize="20dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总户数:"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_allCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:text="查看"
            android:textColor="@drawable/btn_text_color_blue_w"
            android:textSize="15dp"
            android:gravity="center"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="日冻结复核\n已完成:"
            android:maxLines="2"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_dayFinishCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text=""
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_dayFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看"
            android:textColor="@drawable/btn_text_color_blue_w"
            android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text="日冻结复核\n未完成:"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_dayUnfinishedCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_dayUnfinished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@drawable/btn_text_color_blue_w"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="月冻结复核\n已完成:"
            android:maxLines="2"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_monthFinishCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text=""
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_monthFinish"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="查看"
            android:textColor="@drawable/btn_text_color_blue_w"
            android:textSize="15dp" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text="月冻结复核\n未完成:"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_monthUnfinishedCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_monthUnfinished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@drawable/btn_text_color_blue_w"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text="日冻结复核\n异常:"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_dayAbnormalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_dayAbnormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@drawable/btn_text_color_blue_w"/>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text="月冻结复核\n异常:"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_monthAbnormalCount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"/>

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_monthAbnormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="查看"
            android:textSize="15dp"
            android:gravity="center"
            android:textColor="@drawable/btn_text_color_blue_w"/>

    </LinearLayout>

</LinearLayout>