<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_transparency">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/shen_btn_blue">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:text="手动输入"
                android:textStyle="bold"
                />

            <com.zh.metermanagementcw.view.ClearEditText
                android:id="@+id/et_addr"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/delete"
                android:background="@drawable/bg_et"
                android:hint="请输入表地址"
                android:textSize="25dp"/>


            <com.zh.metermanagementcw.view.ClearEditText
                android:id="@+id/et_electricity"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:inputType="number"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:drawableRight="@mipmap/delete"
                android:background="@drawable/bg_et"
                android:hint="请输入电表止码"
                android:textSize="25dp"/>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_marginRight="10dp"
                    android:id="@+id/btn_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="确定"
                    android:textSize="30dp"
                    android:background="@drawable/btn_bg_transparency"
                    android:textColor="@drawable/btn_text_color_w_b"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/btn_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="取消"
                    android:textSize="30dp"
                    android:background="@drawable/btn_bg_transparency"
                    android:textColor="@drawable/btn_text_color_w_b"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>